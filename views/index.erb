<!--header -->
<div class="jumbotron">
  <div class="container-fluid">
    <div class="page-header">
      <h1>VidBucket!</h1>
        <medium>Upload bucket list videos</medium>
    </div>

<!--upload form -->
<form action="/" method="post" enctype="multipart/form-data">
  <strong>Username:</strong>
  <input type="text" name="users[username]"><br>
  

  <strong>Video URL:</strong>
  <input type="text" name="videos[video_url]"><br>

  <strong>Caption:</strong>
  <input type="text" name="videos[caption]"><br>

  <input type="submit" name="Submit">

</form>


<!-- video container -->
<div class="videos">
  <% @videos.each do |video| %>
    <div class="col-lg-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4><%= video.caption %></h4>
        </div>
      <div class="panel-body">

        <p><%= video.video_url %></p>

        <!--video player -->
          <div id="player"></div>
         <!--end video player -->

          <a href="/videos/<%= video.id %>" class="btn btn-primary">Watch Video</a>

      </div>
    </div>
  </div>
</div>

<% end %>



